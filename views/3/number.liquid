<!-- Main photo block -->
<div class="main-photo extra-small" style="background-image: url({{website_data.header_image | attachment_url: 'top_line' }});">
  <div class="background"></div>
</div>

<div class="container content-zone room-page">
  <div class="row">
    <div class="col-md-4">
      <h1> {{number.name}} </h1>
      {% unless number.description.nil? %}
        <p> {{ number.description }} </p>
      {% endunless %}
      {% if number.room_type.facilities.size > 0 %}
        <strong> Room Facilities </strong>
        <ul class="facilities">
          {% for facility in number.room_type.facilities %}
            <li>
              {% if facility.icon %}
                <i class="fa fa-{{facility.icon}}"> </i>
              {% else %}
                <i class="fa fa-circle"></i>
              {% endif %}
              {{facility.title}}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    <div class="col-md-8">
      {% if number.room_type.photos.size > 0 %}
        <div class="big-photo">
          <img src="" />
        </div>
      {% endif %}
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      {% if website_data.booking_link == '' %}
      {% endif %}
    </div>
    <div class="col-md-8">
      {% if number.room_type.photos.size > 0 %}
        <div class="small-photos">
          <ul>
            {% for photo in number.room_type.photos %}
              {% if foorloop.index == 0 %}
              <li class="active">
              {% else %}
              <li>
              {% endif %}
                <a href="">
                  <img src="" class="hidden-xs"/>
                  <img src="" class="hidden-sm hidden-lg hidden-md" />
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</div>
