
  <div class="main-photo" style="background-image: url({{website_data.header_image | attachment_url: 'default' }})">
    <div class="background">
      <div class="jumbotron">
        <div class="container">
          <div class="text">
            <p class="title">
              {{website_data.header_text_1}}
            </p>
            <p>
              {{website_data.header_text_2}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container numbers">
    <div class="row">
      <div class="col-md-5">
        {{website_data.text_area}}
      </div>
      <div class="col-md-7 numbers-block">
        {% for room in website_data.rooms %}
          {{room.room_types}}
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="features" style="background-image: url({{website_data.features_background_image | attachment_url: 'blured'}})">
    <div class="background">
      <div class="container">
        <div class="tripadvisor">
          {{website_data.tripadvisor_code}}
        </div>
        <div class="features-list">
          <h2>
            {{website_data.features_title}}
          </h2>
          {% for feature in website_data.features %}
            <div class="feature">
              <i class="fa fa-{{feature.icon}}"> </i>
              <strong>{{feature.title}}</strong>
              <br />
              {{feature.description}}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <div class="container faq">
    <h2>
      {{website_data.faq_title}}
    </h2>
    {% for question in website_data.questions %}
      <div class="question-block">
        <p class="question">
          <i class="fa fa-question-circle"></i>
          {{question.question}}
        </p>
        <p class="anwser">
          {{question.answer}}
        </p>
      </div>
    {% endfor %}
  </div>

  <div class="map">
    <div class="container">
      <h2> MAP goes here </h2>
    </div>
  </div>

  <div class="container contacts">
    <div class="row">
      <div class="col-md-6 left-block">
        <h2>Get In Touch</h2>
       <form id="contact-form" method="POST" action="/send_email">
         <div class="half-input first">
           <input class="half" name="name" placeholder="Name" type="text"></input>
         </div>
         <div class="half-input">
           <input class="half" name="email" placeholder="Email Address" type="email"></input>
         </div>
         <textarea name="message" placeholder="Message"></textarea>
         <div class="control text-right">
           1 + 1 =
           <input class="small" name="answer" placeholder="..." type="text"></input>
           <button class="btn btn-primary">Submit</button>
         </div>
       </form>
      </div>
      <div class="col-md-6 right-block">
        <h2>
          {{website_data.contact_area_title}}
        </h2>
        <p>
          {{website_data.contact_description_text}}
        </p>
        <dl class="dl-horizontal">
          <dt>Phone:</dt>
          <dd>
            {{website_data.phone_number}}
          </dd>
          <dt>Email:</dt>
          <dd>
            {{website_data.email_address}}
          </dd>
          <dt>Trip Advisor:</dt>
          <dd>
            <a class="btn btn-success btn-sm" href="{{website_data.tripadvisor_listing_link}}%>">View Our Profile</a>
          </dd>
          <dt>Address:</dt>
          <dd>
            {{website_data.address}}
          </dd>
        </dl>
        </div>
      </div>
    </div>
