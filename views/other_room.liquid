<div class="content-holder clearfix">
  <div class="container">
    <div class="row" id="content">
      <div class="span7">
        <figure class="featured-thumbnail thumbnail large">
          {% if room.website_custom_room_photos.size > 0 %}
            <div class="big-photo">
              <img src="{{room.website_custom_room_photos.first.image | attachment_urk: 'public_big'}}" />
            </div>
          {% endif %}
        </figure>
        {% if room.website_custom_room_photos.size > 1 %}
          <div class="clear"></div>
          <ul class="pager single-pager">
            {% for photo in room.website_custom_room_photos %}
              {% if forloop.index0 == '0' %}
                <li class="active">
              {% else %}
                <li>
              {% endif %}
                <a href="{{photo.image | attachment_url: 'public_big'}}">
                  <img src="{{photo.image | attachment_url: 'public_small' }}" class="hidden-xs"/>
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <div class="entry-content span5">
        <h1>
          {{room.title}}
        </h1>
        {% unless room.description.nil? %}
          <p>
            {% raw %} {{room.description}} {% endraw %}
          </p>
        {% endunless %}
      </div>
    </div>
  </div>
</div>
